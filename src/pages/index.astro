---
import Base from "../layouts/Base.astro";

const projects = [
  {
    name: "AroFlo Integration",
    description:
      "Job card proofreading and invoice automation for AroFlo job management",
    repo: "https://github.com/Nick891770/aroflo-integration",
  },
  {
    name: "Toolbox Talk Generator",
    description: "Monthly safety meeting PDF generation with branding",
    repo: "https://github.com/Nick891770/toolbox-talk-generator",
  },
  {
    name: "SWMS Generator",
    description: "Safe Work Method Statements with hazard and control matrices",
    repo: "https://github.com/Nick891770/swms-generator",
  },
  {
    name: "Electrical Test Sheet",
    description: "AS/NZS 3000 compliant installation test sheets",
    repo: "https://github.com/Nick891770/electrical-test-sheet",
  },
  {
    name: "Job Prestart Checklist",
    description: "Daily job prestart safety checklists",
    repo: "https://github.com/Nick891770/job-prestart-checklist",
  },
  {
    name: "Vehicle & Equipment Prestart",
    description: "Vehicle and equipment inspection forms",
    repo: "https://github.com/Nick891770/vehicle-equipment-prestart",
  },
  {
    name: "SOP Generator",
    description: "Standard Operating Procedures with step-by-step formatting",
    repo: "https://github.com/Nick891770/sop-generator",
  },
  {
    name: "Trade Website SEO",
    description: "SEO automation toolkit for trade business websites",
    repo: "https://github.com/Nick891770/trade-website-seo",
  },
];

const links = [
  { label: "GitHub", url: "https://github.com/Nick891770", icon: "github" },
  { label: "X", url: "https://x.com/NickLaws_au", icon: "x" },
  { label: "Threads", url: "https://www.threads.net/@lawselectrical", icon: "threads" },
  {
    label: "Laws Electrical",
    url: "https://lawselecservices.com",
    icon: "web",
  },
  {
    label: "nick@lawselecservices.com",
    url: "mailto:nick@lawselecservices.com",
    icon: "email",
  },
];
---

<Base
  title="Nick Laws — Building AI Systems for Trade Businesses"
  description="Electrician and business owner building AI-powered tools for trade businesses. Brisbane, Australia."
>
  <main>
    <header class="hero">
      <h1>Nick Laws</h1>
      <p class="tagline">
        Building AI systems for trade businesses
      </p>
    </header>

    <section class="about">
      <p>
        I'm an electrician and business owner in Brisbane, building AI-powered
        tools that automate the admin side of running a trade business.
        <a href="https://lawselecservices.com">Laws Electrical</a> is the
        prototype — every tool below was built to solve a real problem in my
        own business, then open-sourced for other trades to use.
      </p>
    </section>

    <section class="projects">
      <h2>Projects</h2>
      <div class="grid">
        {
          projects.map((project) => (
            <a href={project.repo} class="card" target="_blank" rel="noopener">
              <h3>{project.name}</h3>
              <p>{project.description}</p>
              <span class="card-link">View on GitHub &rarr;</span>
            </a>
          ))
        }
      </div>
    </section>

    <section class="links">
      <h2>Links</h2>
      <div class="link-list">
        {
          links.map((link) => (
            <a
              href={link.url}
              class="link-item"
              target={link.icon !== "email" ? "_blank" : undefined}
              rel={link.icon !== "email" ? "noopener" : undefined}
            >
              {link.label}
            </a>
          ))
        }
      </div>
    </section>

    <footer>
      <p>&copy; {new Date().getFullYear()} Nick Laws</p>
    </footer>
  </main>
</Base>

<style>
  main {
    max-width: 720px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
  }

  .hero {
    text-align: center;
    margin-bottom: 3rem;
  }

  .hero h1 {
    font-size: 2.5rem;
    font-weight: 800;
    color: #fff;
    margin-bottom: 0.5rem;
  }

  .tagline {
    font-size: 1.15rem;
    color: var(--accent);
  }

  .about {
    margin-bottom: 3rem;
  }

  .about p {
    font-size: 1.05rem;
    color: var(--text-muted);
    line-height: 1.8;
  }

  .projects {
    margin-bottom: 3rem;
  }

  h2 {
    font-size: 1.3rem;
    font-weight: 700;
    color: #fff;
    margin-bottom: 1.25rem;
    letter-spacing: 0.02em;
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .card {
    display: flex;
    flex-direction: column;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 1.25rem;
    color: var(--text);
    transition: border-color 0.2s, transform 0.2s;
  }

  .card:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
    color: var(--text);
  }

  .card h3 {
    font-size: 1rem;
    font-weight: 600;
    color: #fff;
    margin-bottom: 0.4rem;
  }

  .card p {
    font-size: 0.875rem;
    color: var(--text-muted);
    flex: 1;
    margin-bottom: 0.75rem;
  }

  .card-link {
    font-size: 0.8rem;
    color: var(--accent);
    font-weight: 500;
  }

  .links {
    margin-bottom: 3rem;
  }

  .link-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .link-item {
    display: inline-block;
    padding: 0.5rem 1rem;
    border: 1px solid var(--border);
    border-radius: 6px;
    font-size: 0.9rem;
    transition: border-color 0.2s, background-color 0.2s;
  }

  .link-item:hover {
    border-color: var(--accent);
    background-color: var(--bg-card);
  }

  footer {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
    color: var(--text-muted);
    font-size: 0.85rem;
  }

  @media (max-width: 560px) {
    .hero h1 {
      font-size: 2rem;
    }

    .grid {
      grid-template-columns: 1fr;
    }
  }
</style>
